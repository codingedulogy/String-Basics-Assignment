class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int count = 0;
        int pay = 0;
        int n = input.nextInt();
        int x = input.nextInt();
        String s1 = input.next();
        String s2 = input.next();
        for (int i = 0; i < n; i++) {
            if ((s1.charAt(i) != s2.charAt(i)) ) {count++;
                if (count%2==0){
                }else {
                    pay+=x;
                }
            }
        }
        System.out.print(pay);
    }
}
